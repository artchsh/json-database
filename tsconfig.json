{
  "include": ["src/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "declarationMap": true,
    "removeComments": false,
    "target": "es6",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"]
  }
}
